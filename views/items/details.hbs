<main id="details">
  <section id="details-info">
    <div class="game-image">
      <img src="{{item.image}}" />
    </div>

    <div class="game-info">
      <div class="game-text">
        <h1 id="name">{{item.name}}</h1>
        <h3 id="platform">Platform: {{item.platfom}}</h3>
        <p id="price"><span>Price: ${{item.price}}</span></p>
        <p id="genre"><span>Genre: {{item.genre}}</span></p>
        <p id="description">{{item.description}}
      <div class="product-btn">
        <!--Only for registered user and author of the publication -->
         
           {{#if isOwner}}
        <div class="author">
          <a href="/{{item._id}}/edit" class="btn-edit">Edit</a>
          <a href="/{{item._id}}/delete" class="btn-delete">Delete</a>
        </div>
           {{else}}
            {{#if isUser}} 
           <!-- Logged in user who has already buy this game code-->
           {{#if isBuyer}}
             <p class="buy-message">You have already bought this game</p>
           <!-- Logged in user who has not yet buy this game code-->
           {{else}}
        <!--  --><a href="/{{item._id}}/buy" class="btn-buy">Buy</a>
        {{/if}}
        {{/if}}
        {{/if}}


        <!-- -->
      </div>
    </div>
  </section>
</main>
